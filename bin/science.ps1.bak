function Search-BodyWithSnippets {
  param(
    [Parameter(Mandatory=$true)][string]$Pattern,
    [int]$Top = 5,
    [int]$Context = 160,
    [string]$Base = (Split-Path $PSCommandPath -Parent | Split-Path -Parent)
  )
