    function GrabField([string]$label,[string]$text){
      $pat = "(?m)^{0}:\s*(.*)$" -f ([regex]::Escape($label))
      $m = [regex]::Match($text,$pat)
      if($m.Success){ $m.Groups[1].Value.Trim() } else { "" }
