  $rules = Load-TagRules -Base $Base
  New-Item -ItemType Directory -Force -Path (Split-Path $OutJsonl) | Out-Null
  if (Test-Path $OutJsonl) { Remove-Item $OutJsonl -Force }
  $i = 0; $tagged = 0
