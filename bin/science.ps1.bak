  $missing = $rows | Where-Object { -not $_.TITLE -or -not $_.URL }
  if($missing){ Write-Warning "Rows with missing TITLE/URL:`n$($missing | Select PMCID,TITLE,URL | Format-Table -AutoSize | Out-String)" }
