  if (Test-Path $OutJsonl) { Remove-Item $OutJsonl -Force }
  $i = 0; $tagged = 0
  Get-Content $InJsonl | ForEach-Object {
    $line = $_.Trim()
    if (-not $line) { return }
    $rec = $line | ConvertFrom-Json
    # text to scan (lowercased once) � be explicit for PS 5.1 nulls
    $parts = @()
