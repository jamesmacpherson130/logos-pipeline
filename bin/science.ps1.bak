  $anySet = [System.Collections.Generic.HashSet[string]]::new(($Any | ForEach-Object { $_.ToLower() }))
  $allSet = [System.Collections.Generic.HashSet[string]]::new(($All | ForEach-Object { $_.ToLower() }))
