    $tagsSet = [System.Collections.Generic.HashSet[string]]::new($tags)
    $okAny = ($anySet.Count -eq 0) -or ($tagsSet.Overlaps($anySet))
    $okAll = $true
    if ($allSet.Count -gt 0) {
      foreach($t in $allSet){ if(-not $tagsSet.Contains($t)){ $okAll = $false; break } }
    }
