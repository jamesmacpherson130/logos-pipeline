    $out['tags'] = [string[]]$tags
    ($out | ConvertTo-Json -Depth 10 -Compress) | Out-File -FilePath $OutJsonl -Append -Encoding UTF8
    $i++
    if ($tags.Count -gt 0) { $tagged++ }
  }
  Write-Host "? Tagged $tagged / $i records ? $OutJsonl"
