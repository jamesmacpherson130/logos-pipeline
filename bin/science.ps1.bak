      if($m.Success){
        $s = $m.Index; $e = [Math]::Min($o.body_text.Length-1, $m.Index+$m.Length)
        $a = [Math]::Max(0, $s-$Context); $b = [Math]::Min($o.body_text.Length-1, $e+$Context)
